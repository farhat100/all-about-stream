        name="shawonmq's Add-ons">
        <info compressed="false">http://github.com/shawonmq/all-about-stream/raw/master/addons.xml</info>
        <checksum>http://github.com/shawonmq/all-about-stream/raw/master/addons.xml.md5</checksum>
